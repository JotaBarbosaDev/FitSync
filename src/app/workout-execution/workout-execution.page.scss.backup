/* Melhorias espec√≠ficas para se√ß√£o de exerc√≠cios */
.exercises-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
  max-height: 400px;
  overflow-y: auto;
  padding-right: 4px;

  /* Scrollbar personalizada */
  &::-webkit-scrollbar {
    width: 4px;
  }

  &::-webkit-scrollbar-track {
    background: var(--ion-color-step-100);
    border-radius: 2px;
  }

  &::-webkit-scrollbar-thumb {
    background: var(--ion-color-primary);
    border-radius: 2px;
  }
}

/* Corre√ß√£o para poss√≠veis tri√¢ngulos/artefatos visuais */
.exercise-preview {
  /* Remove poss√≠veis pseudo-elementos que causam tri√¢ngulos */
  &::before,
  &::after {
    display: none !important;
    content: none !important;
  }

  /* Garante que n√£o h√° borders problem√°ticas */
  * {
    box-sizing: border-box;
  }

  /* Fix para chips com problemas visuais */
  ion-chip {
    &::before,
    &::after {
      display: none !important;
    }
  }
}

